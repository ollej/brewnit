  <div class="list-item linked-item pure-g">
    <div class="pure-u">
      <%= item_avatar(item) %>
    </div>

    <div class="pure-u-5-8 item-information event-item-information">
      <h5 class="item-subtitle event-name"><%= t(:'latest_items.event') %></h5>
      <h4 class="item-title event-name">
        <%= link_to shorten(item.name), item, class: 'event-link item-link' %>
      </h4>
      <p class="item-desc event-organizer">
        <%= shorten(item.organizer, 27) %>
      </p>
    </div>
  </div>

