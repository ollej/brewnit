<div id="brewlogs-list" class="item-index">
  <% @brewlogs.each do |brewlog| %>
  <div class="list-item --without-padding pure-g">
    <div class="pure-u">
      <div class="item-image">
        <%= user_avatar(brewlog.user) %>
      </div>
    </div>

    <div class="pure-u-2-3 item-information">
      <h5 class="item-header-small">
        <%= link_to brewlog.user.brewery_or_name, brewlog.user, class: 'user-link' %>
      </h5>
      <h4 class="item-header-main">
        <%= I18n.l(brewlog.brewed_at) %>
      </h4>
      <p class="item-desc">
        <% if brewlog.equipment.present? %>
          <%= brewlog.equipment %>
        <% end %>
      </p>
    </div>

    <div class="pure-u-1 pure-u-lg-5-24 list-item-details">
      <p>
      <% if brewlog.bottled_at.present? %>
      <%= I18n.t(:'activerecord.attributes.brew_log.bottled_at') %>:
        <%= I18n.l(brewlog.bottled_at) %><br>
      <% end %>
      <% if brewlog.brewers.present? %>
        <%= I18n.t(:'activerecord.attributes.brew_log.brewers') %>:
          <%= brewlog.brewers %><br>
      <% end %>
      </p>
    </div>

    <% if brewlog.description.present? %>
    <div class="pure-u-1">
      <p><%= brewlog.description %></p>
    </div>
    <% end %>

    <div class="pure-u-2-3 list-item-details --left-aligned">
      <%= show?(brewlog.batch_volume,
        prefix: I18n.t(:'activerecord.attributes.brew_log.batch_volume') + ":",
        suffix: I18n.t(:'beerxml.liter_abbr')) %>
      <%= show?(brewlog.boil_volume,
        prefix: I18n.t(:'activerecord.attributes.brew_log.boil_volume') + ":",
        suffix: I18n.t(:'beerxml.liter_abbr')) %>
      <%= show?(brewlog.fermenter_volume,
        prefix: I18n.t(:'activerecord.attributes.brew_log.fermenter_volume') + ":",
        suffix: I18n.t(:'beerxml.liter_abbr')) %>
      <%= show?(brewlog.bottled_volume,
        prefix: I18n.t(:'activerecord.attributes.brew_log.bottled_volume') + ":",
        suffix: I18n.t(:'beerxml.liter_abbr')) %>
    </div>

    <div class="pure-u-1-3 list-item-details">
      <%= show?(brewlog.mash_ph, prefix: I18n.t(:'activerecord.attributes.brew_log.mash_ph')) %>
      <%= show?(brewlog.preboil_og, prefix: I18n.t(:'activerecord.attributes.brew_log.preboil_og')) %>
      <%= show?(brewlog.og, prefix: I18n.t(:'beerxml.og')) %>
      <%= show?(brewlog.fg, prefix: I18n.t(:'beerxml.fg')) %>
    </div>
  </div>
  <% end %>
</div>

