 <%= form_tag(recipes_path, method: 'get', class: 'pure-form', id: 'search-form') do %>
  <fieldset>
    <legend><%= I18n.t(:'recipes.search.description') %></legend>
    <%= hidden_field_tag :clear_search, true %>
    <div class="field pure-control-group">
      <%= search_field_tag :q, @search[:query], autocomplete: 'off',
            class: 'pure-input-1-3',
            placeholder: I18n.t(:'recipes.search.freetext'),
            results: 5, autosave: 'brygglogg-search' %>
    </div>
    <div class="field pure-control-group">
      <%= select_tag :style, options_for_select(@styles, @search[:style_name]),
            class: 'pure-input-1-3',
            include_blank: I18n.t(:'recipes.search.style') %>
    </div>
    <div class="actions pure-controls">
      <%= button_tag type: :submit, class: 'pure-button pure-button-primary' do %>
        <i class="fa fa-search"></i> <%= I18n.t(:'recipes.search.button') %>
      <% end %>
      <%= link_to recipes_path(clear_search: true), class: 'pure-button' do %>
        <i class="fa fa-times-circle"></i> <%= I18n.t(:'recipes.search.clear') %>
      <% end %>
    </div>
  </fieldset>
 <% end %>

