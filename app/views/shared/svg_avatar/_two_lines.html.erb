<svg class="item-avatar" width="<%= width %>" height="<%= height %>">
  <rect fill="<%= backgroundcolor %>" x="0" y="0" width="<%= width %>" height="<%= height %>"></rect>
  <text class="avatar-text" x="32" y="24"
    fill="<%= textcolor %>" font-size="<%= fontsize %>" text-anchor="middle">
    <%= texts.first %>
  </text>
  <text class="avatar-text" x="32" y="52"
    fill="<%= textcolor %>" font-size="<%= fontsize %>" text-anchor="middle">
    <%= texts.second %>
  </text>
</svg>

