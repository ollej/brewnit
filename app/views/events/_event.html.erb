          <li class="pure-u-1 pure-u-xl-1-3">
            <div class="list-item event-item linked-item pure-g">
              <div class="pure-u">
                <%= item_avatar(event) %>
              </div>
              <div class="pure-u-5-8 item-information event-item-information">
                <h5 class="item-header-small event-organizer item-subtitle"><%= shorten(event.organizer, 30) %></h5>
                <h4 class="item-header-main event-name item-title">
                  <%= link_to shorten(event.name), event, class: 'event-link item-link' %>
                </h4>
                <p class="item-desc">
                  <span class="event-held_at"><%= I18n.l(event.held_at.to_date) %></span>
                  <span class="event-type">| <%= event.event_type %></span>
                </p>
              </div>
            </div>
          </li>
