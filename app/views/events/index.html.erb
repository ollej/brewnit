      <div class="page-content-header pure-g">
        <div class="pure-u-2-3">
          <h1 class="event-content-title"><%= title I18n.t(:'events.index') %></h1>
        </div>
        <div class="page-content-controls pure-u-1-3">
          <div class="controls-public">
            <%= form_tag(events_path, method: 'get', class: 'pure-form quicksearch', id: 'eventsearch-form') do %>
              <%= search_field_tag :event_search, @event_search, autocomplete: 'off',
                  class: 'pure-input-2-5 pure-input-rounded',
                  placeholder: t(:'events.search'),
                  results: 5, autosave: 'brygglogg-search-events' %>
            <% end %>
          </div>
          <div class="controls-signed-in">
            <%= link_to new_event_path(@event), class: 'pure-button secondary-button' do %>
              <i class="fa fa-calendar-o"></i> <%= t(:'events.new') %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="page-content-body event-index item-index">
        <% if @event_search.present? %>
          <h2><%= I18n.t(:'common.searched_term', search_term: @event_search) %></h2>
          <%= link_to events_path do %>
            <%= t(:'common.clear_search') %>
          <% end %>
        <% end %>
        <h2><%= I18n.t(:'events.upcoming_events') %></h2>
        <ul class="event-list linked-list pure-g">
          <%= render partial: @upcoming_events %>
        </ul>

        <h2><%= I18n.t(:'events.past_events') %></h2>
        <ul class="event-list linked-list pure-g">
          <%= render partial: @past_events %>
        </ul>
      </div>
