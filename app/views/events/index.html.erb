      <div class="page-content-header pure-g">
        <div class="pure-u-4-5">
          <h1 class="event-content-title"><%= title I18n.t(:'events.index') %></h1>
        </div>
        <div class="page-content-controls pure-u-1-5">
          <% if user_signed_in? %>
          <div class="controls-signed-in">
            <%= link_to new_event_path(@event), class: 'pure-button secondary-button' do %>
              <i class="fa fa-calendar-o"></i> <%= t(:'events.new') %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>

      <div class="page-content-body event-index item-index">
        <ul class="event-list linked-list pure-g">
        <% @events.each do |event| %>
          <li class="pure-u-1 pure-u-xl-1-3">
            <div class="list-item event-item linked-item pure-g">
              <div class="pure-u event-item-information">
                <h5 class="item-header-small event-organizer"><%= event.organizer %></h5>
                <h4 class="item-header-main event-name"><%= link_to event.name, event, class: 'event-link item-link' %></h4>
                <p class="list-item-details">
                  <span class="event-held_at"><%= I18n.l(event.held_at.to_date) %></span>
                  <span class="event-type">| <%= event.event_type %></span>
                  <!--
                  <% unless event.location.blank? %>
                    <span class="event-location">| <%= event.location %></span>
                  <% end %>
                  -->
                </p>
              </div>
            </div>
        <% end %>
          </li>
      </ul>
      </div>
