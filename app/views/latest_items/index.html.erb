      <div class="page-content-header pure-g">
        <div class="pure-u">
          <h1 class="user-content-title"><%= title I18n.t(:'latest_items.index') %></h1>
        </div>
      </div>

      <div class="page-content-body latest_items-index item-index">
        <% if @event.present? %>
          <%= render partial: 'shared/event_plate', locals: { event: @event } %>
        <% end %>

        <ul class="linked-list pure-g">
          <% @latest.each do |item| %>
            <li class="pure-u-1 pure-u-xl-1-3">
              <%= render_item(item) %>
            </li>
          <% end %>
        </ul>
      </div>

