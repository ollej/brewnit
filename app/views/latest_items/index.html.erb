      <div class="page-content-header pure-g">
        <div class="pure-u">
          <h1 class="user-content-title"><%= title I18n.t(:'latest_items.index') %></h1>
        </div>
      </div>

      <div class="page-content-body latest_items-index item-index">
        <% if @event.present? %>
          <div class="linked-list">
            <div class="pure-g next-event info-plate linked-item">
              <div class="pure-u">
                <%= image_tag @event.main_image(:medium), class: 'event-image',
                  alt: @event.name %>
              </div>
              <div class="pure-u-5-8">
                <h2 class="item-title event-name item-content-title">
                  <%= link_to @event.name, @event, class: 'item-link event-link' %>
                </h2>
                <h3 class="item-subtitle event-type">
                  <%= @event.event_type %> |
                  <%= @event.held_at %> |
                  <%= @event.organizer %>
                </h5>
                <p class="item-desc event-description">
                  <%= shorten_strip(@event.description, 200) %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <ul class="linked-list pure-g">
          <% @latest.each do |item| %>
            <li class="pure-u-1 pure-u-xl-1-3">
              <%= render_item(item) %>
            </li>
          <% end %>
        </ul>
      </div>

