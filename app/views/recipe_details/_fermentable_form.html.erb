<%= form_for(Fermentable.new, url: recipe_fermentables_path(@recipe),
             class: 'pure-form pure-form-stacked', remote: true) do |f| %>
  <fieldset>
    <legend><%= I18n.t(:'recipe_detail.fermentables') %></legend>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-4">
        <%= f.label :name, I18n.t(:'activerecord.attributes.fermentable.name') %>
        <%= f.text_field :name, class: 'pure-u-23-24', required: true,
          placeholder: I18n.t(:'activerecord.attributes.fermentable.name') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-4">
        <%= f.label :amount, I18n.t(:'activerecord.attributes.fermentable.amount') %>
        <%= f.number_field :amount, class: 'pure-u-23-24', required: true,
          placeholder: I18n.t(:'activerecord.attributes.fermentable.amount') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-4">
        <%= f.label :ebc, I18n.t(:'activerecord.attributes.fermentable.ebc') %>
        <%= f.number_field :ebc, class: 'pure-u-23-24',
          placeholder: I18n.t(:'activerecord.attributes.fermentable.ebc') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-4">
        <% # change to select %>
        <%= f.label :grain_type, I18n.t(:'activerecord.attributes.fermentable.grain_type') %>
        <%= f.text_field :grain_type, class: 'pure-u-23-24',
          placeholder: I18n.t(:'activerecord.attributes.fermentable.grain_type') %>
      </div>
    </div>

    <div class="actions pure-controls">
      <%= f.submit I18n.t(:'recipe_detail.add'), class: 'pure-button pure-button-secondary' %>
    </div>

    <%= render 'fermentable_list' %>
  </fieldset>
<% end %>
