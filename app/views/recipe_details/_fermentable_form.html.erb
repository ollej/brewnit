<%= form_with model: Fermentable.new, url: recipe_fermentables_path(@recipe),
      local: false, class: 'pure-form pure-form-stacked' do |f| %>
  <fieldset>
    <legend><%= I18n.t(:'recipe_detail.fermentables') %></legend>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <%= f.label :name, I18n.t(:'activerecord.attributes.fermentable.name') %>
        <%= f.text_field :name, class: 'pure-input-1', required: true,
          placeholder: I18n.t(:'activerecord.attributes.fermentable.name') %>
      </div>
      <div class="pure-u-1-2 pure-u-sm-1-3 pure-u-md-1-6">
        <%= f.label :amount, I18n.t(:'activerecord.attributes.fermentable.amount') %>
        <%= f.number_field :amount, class: 'pure-input-1', required: true, step: :any,
          placeholder: I18n.t(:'activerecord.attributes.fermentable.amount') %>
      </div>
      <div class="pure-u-1-2 pure-u-sm-1-3 pure-u-md-1-6">
        <%= f.label :ebc, I18n.t(:'activerecord.attributes.fermentable.ebc') %>
        <%= f.number_field :ebc, class: 'pure-input-1', required: true, step: :any,
          placeholder: I18n.t(:'activerecord.attributes.fermentable.ebc') %>
      </div>
      <div class="pure-u-1 pure-u-sm-1-3 pure-u-md-1-6">
        <%= f.label :grain_type, I18n.t(:'activerecord.attributes.fermentable.grain_type') %>
        <%= f.select :grain_type, options_for_select(fermentable_type_options), {},
          class: 'pure-input-1' %>
      </div>
      <div class="pure-u-1 pure-u-md-1-6">
        <label>&nbsp;</label>
        <%= f.submit I18n.t(:'recipe_detail.add'), class: 'pure-button pure-button-secondary' %>
      </div>
    </div>

    <%= render 'fermentable_list' %>
  </fieldset>
<% end %>
