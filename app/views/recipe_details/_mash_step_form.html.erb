<%= form_for(MashStep.new, url: recipe_mash_steps_path(@recipe),
             class: 'pure-form pure-form-stacked', remote: true) do |f| %>
  <fieldset>
    <legend><%= I18n.t(:'recipe_detail.mash_steps') %></legend>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-4">
        <%= f.label :name, I18n.t(:'activerecord.attributes.mash_step.name') %>
        <%= f.text_field :name, class: 'pure-u-23-24', required: true,
          placeholder: I18n.t(:'activerecord.attributes.mash_step.name') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :step_temperature, I18n.t(:'activerecord.attributes.mash_step.step_temperature') %>
        <%= f.number_field :step_temperature, class: 'pure-u-22-24', required: true, step: :any,
          placeholder: I18n.t(:'activerecord.attributes.mash_step.step_temperature') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :step_time, I18n.t(:'activerecord.attributes.mash_step.step_time') %>
        <%= f.number_field :step_time, class: 'pure-u-22-24', required: true, step: :any,
          placeholder: I18n.t(:'activerecord.attributes.mash_step.step_time') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :ramp_time, I18n.t(:'activerecord.attributes.mash_step.ramp_time') %>
        <%= f.number_field :ramp_time, class: 'pure-u-22-24', step: :any,
          placeholder: I18n.t(:'activerecord.attributes.mash_step.ramp_time') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :infuse_amount, I18n.t(:'activerecord.attributes.mash_step.infuse_amount') %>
        <%= f.number_field :infuse_amount, class: 'pure-u-22-24', step: :any,
          placeholder: I18n.t(:'activerecord.attributes.mash_step.infuse_amount') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :mash_type, I18n.t(:'activerecord.attributes.mash_step.mash_type') %>
        <%= f.select :mash_type, options_for_select(mash_type_options), {},
          class: 'pure-u-22-24' %>
      </div>
    </div>

    <div class="actions pure-controls">
      <%= f.submit I18n.t(:'recipe_detail.add'), class: 'pure-button pure-button-secondary' %>
    </div>

    <%= render 'mash_step_list' %>
  </fieldset>
<% end %>
