<%= form_for(Misc.new, url: recipe_miscs_path(@recipe),
             class: 'pure-form pure-form-stacked', remote: true) do |f| %>
  <fieldset>
    <legend><%= I18n.t(:'recipe_detail.miscs') %></legend>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-4">
        <%= f.label :name, I18n.t(:'activerecord.attributes.misc.name') %>
        <%= f.text_field :name, class: 'pure-u-23-24', required: true,
          placeholder: I18n.t(:'activerecord.attributes.misc.name') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :amount, I18n.t(:'activerecord.attributes.misc.amount') %>
        <%= f.number_field :amount, class: 'pure-u-23-24', required: true,
          placeholder: I18n.t(:'activerecord.attributes.misc.amount') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :weight, I18n.t(:'activerecord.attributes.misc.weight') %>
        <%= f.select :weight, options_for_select(misc_weight_options), {},
          { class: 'pure-u-23-24' } %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :use_time, I18n.t(:'activerecord.attributes.misc.use_time') %>
        <%= f.text_field :use_time, class: 'pure-u-23-24',
          placeholder: I18n.t(:'activerecord.attributes.misc.use_time') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-8">
        <%= f.label :use, I18n.t(:'activerecord.attributes.misc.use') %>
        <%= f.text_field :use, class: 'pure-u-23-24',
          placeholder: I18n.t(:'activerecord.attributes.misc.use') %>
      </div>
      <div class="pure-u-1 pure-u-md-1-4">
        <%= f.label :misc_type, I18n.t(:'activerecord.attributes.misc.misc_type') %>
        <%= f.text_field :misc_type, class: 'pure-u-23-24',
          placeholder: I18n.t(:'activerecord.attributes.misc.misc_type') %>
      </div>
    </div>

    <div class="actions pure-controls">
      <%= f.submit I18n.t(:'recipe_detail.add'), class: 'pure-button pure-button-secondary' %>
    </div>

    <%= render 'misc_list' %>
  </fieldset>
<% end %>
