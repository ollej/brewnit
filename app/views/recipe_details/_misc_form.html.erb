<%= form_with model: Misc.new, url: recipe_miscs_path(@recipe),
             local: false, class: 'pure-form pure-form-stacked' do |f| %>
  <fieldset>
    <legend><%= I18n.t(:'recipe_detail.miscs') %></legend>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3 pure-u-xl-1-4">
        <%= f.label :name, I18n.t(:'activerecord.attributes.misc.name') %>
        <%= f.text_field :name, class: 'pure-input-1', required: true,
          placeholder: I18n.t(:'activerecord.attributes.misc.name') %>
      </div>
      <div class="pure-u-1-2 pure-u-md-1-6 pure-u-lg-1-5 pure-u-xl-1-8">
        <%= f.label :amount, I18n.t(:'activerecord.attributes.misc.amount') %>
        <%= f.number_field :amount, class: 'pure-input-1', required: true, step: :any,
          placeholder: I18n.t(:'activerecord.attributes.misc.amount') %>
      </div>
      <div class="pure-u-1-2 pure-u-md-1-6 pure-u-lg-1-5 pure-u-xl-1-8">
        <%= f.label :weight, I18n.t(:'activerecord.attributes.misc.weight') %>
        <%= f.select :weight, options_for_select(weight_options), {},
          { class: 'pure-input-1' } %>
      </div>
      <div class="pure-u-1-2 pure-u-md-1-6 pure-u-lg-1-5 pure-u-xl-1-8">
        <%= f.label :use_time, I18n.t(:'activerecord.attributes.misc.use_time') %>
        <%= f.text_field :use_time, class: 'pure-input-1', required: true,
          placeholder: I18n.t(:'activerecord.attributes.misc.use_time') %>
      </div>
      <div class="pure-u-1-2 pure-u-md-1-6 pure-u-lg-1-5 pure-u-xl-1-8">
        <%= f.label :use, I18n.t(:'activerecord.attributes.misc.use') %>
        <%= f.select :use, options_for_select(misc_use_options), {}, class: 'pure-input-1' %>
      </div>
      <div class="pure-u-1-2 pure-u-md-1-6 pure-u-lg-1-5 pure-u-xl-1-8">
        <%= f.label :misc_type, I18n.t(:'activerecord.attributes.misc.misc_type') %>
        <%= f.select :misc_type, options_for_select(misc_type_options), {}, class: 'pure-input-1' %>
      </div>
      <div class="pure-u-1-2 pure-u-md-1-6 pure-u-lg-1-5 pure-u-xl-1-8">
        <label>&nbsp;</label>
        <%= f.submit I18n.t(:'recipe_detail.add'), class: 'pure-button pure-button-secondary' %>
      </div>
    </div>

    <%= render 'misc_list' %>
  </fieldset>
<% end %>
