      <div class="page-content-header pure-g">
        <div class="pure-u">
          <h1 class="recipe-content-title"><%= I18n.t(:'devise.passwords.change_your_password') %></h1>
        </div>
      </div>

      <div class="page-content-body password-edit">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :put, class: 'pure-form pure-form-aligned' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <fieldset>
    <div class="field pure-control-group">
      <%= f.label :password, I18n.t(:'devise.passwords.new_password') %>
      <% if @minimum_password_length %>
        <em>(<%= I18n.t(:'users.min_pwd_length', min_length: @minimum_password_length) %>)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'off', required: true %>
    </div>

    <div class="field pure-control-group">
      <%= f.label :password_confirmation, I18n.t(:'devise.passwords.confirm_new_password') %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', required: true %>
    </div>

    <div class="actions pure-controls">
      <%= f.submit I18n.t(:'devise.passwords.change_my_password'), class: 'pure-button pure-button-primary'  %>
    </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
      </div>
