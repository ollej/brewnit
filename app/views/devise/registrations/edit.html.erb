      <div class="recipe-content-header pure-g">
        <div class="pure-u">
          <h1 class="recipe-content-title"><%= I18n.t(:'users.edit') %></h1>
        </div>
      </div>

      <div class="recipe-content-body">

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { method: :put, class: 'pure-form pure-form-aligned' }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <div class="field pure-control-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field pure-control-group">
      <%= f.label :password %>
      <%= f.password_field :password, required: true, autocomplete: 'off', placeholder: I18n.t(:'activerecord.attributes.user.password') %><br />
      <em>(<%= I18n.t(:'users.leave_pwd_blank') %>)</em>
    </div>

    <div class="field pure-control-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: I18n.t(:'activerecord.attributes.user.password_confirmation') %>
    </div>

    <div class="field pure-control-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'off', placeholder: I18n.t(:'activerecord.attributes.user.current_password')  %><br>
      <em>(<%= I18n.t(:'users.pwd_needed_to_confirm') %>)</em>
    </div>

    <div class="actions pure-controls">
      <%= f.submit I18n.t(:'users.save'), class: 'pure-button pure-button-primary' %>
    </div>
  </fieldset>
<% end %>

          <h3><%= I18n.t(:'users.cancel_account') %></h3>
          <p><%= I18n.t(:'users.cancel_account_description') %></p>
          <%= button_to I18n.t(:'users.cancel_my_account'),
            registration_path(resource_name),
            data: { confirm: I18n.t(:'users.confirm_cancel')},
            method: :delete, class: 'pure-button secondary-button button-error' %></p>
      </div>
