      <div class="page-content-header pure-g">
        <div class="pure-u-1 pure-u-sm-3-5">
          <h1 class="recipe-content-title">
            <%= title I18n.t(:'recipe_events.events_for_recipe', recipe_name: @recipe.name) %>
          </h1>
        </div>
        <div class="page-content-controls pure-u-1 pure-u-sm-2-5">
          <div class="controls-signed-in">
            <% if @recipe.complete? %>
              <%= link_to @recipe, class: 'pure-button secondary-button',
                data: tooltip_data(I18n.t(:'recipe_detail.show_recipe_description'),
                                  length: 'small') do %>
                <%= icon('beer') %> <%= t(:'recipe_detail.show_recipe') %>
              <% end %>
            <% end %>

            <%= link_to recipe_details_path(@recipe), class: 'pure-button secondary-button',
                data: tooltip_data(I18n.t(:'recipes.build_recipe_description')) do %>
              <%= icon('edit') %> <%= I18n.t(:'recipes.build_recipe') %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="page-content-body">
<% if @recipe.complete? && @recipe.public? %>
  <%= render 'shared/recipe_events' %>
  <%= render 'shared/recipe_events_form' %>
<% else %>
  <p><em><%= I18n.t(:'recipe_events.recipe_must_be_completed') %></em></p>
<% end %>
      </div>
