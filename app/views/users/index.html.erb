      <div class="page-content-header pure-g">
        <div class="pure-u-1 pure-u-sm-3-5 user-header">
          <h1 class="user-content-title"><%= title I18n.t(:'users.index') %></h1>
        </div>
        <div class="page-content-controls pure-u-1 pure-u-sm-2-5">
          <div class="controls-public">
            <%= form_tag(users_path, method: 'get', class: 'pure-form', id: 'usersearch-form') do %>
              <%= search_field_tag :user_search, @user_search, autocomplete: 'off',
                  class: 'pure-input-2-5 pure-input-rounded',
                  placeholder: t(:'users.search'),
                  results: 5, autosave: 'brygglogg-search-users' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="page-content-body user-index item-index">
        <% if @user_search.present? %>
          <h2><%= I18n.t(:'common.searched_term', search_term: @user_search) %></h2>
          <%= link_to users_path do %>
            <%= t(:'common.clear_search') %>
          <% end %>
        <% end %>
        <ul class="user-list linked-list pure-g">
        <% @users.each do |user| %>
          <li class="pure-u-1 pure-u-xl-1-3">
            <div class="list-item user-item linked-item pure-g">
              <div class="pure-u">
                <%= image_tag user.avatar_image, class: 'item-image user-avatar', alt: user.name, height: 64, width: 64 %>
              </div>

              <div class="pure-u-5-8 item-information user-item-information">
                <h5 class="item-header-small user-brewery"><%= shorten(user.brewery, 30) %></h5>
                <h4 class="item-header-main user-name"><%= link_to shorten(user.name), user, class: 'user-link item-link' %></h4>
                <p class="item-desc item-item-details">
                  <span class="user-recipes"><%= I18n.t(:'users.recipes', count: user.recipes.size) %></span>
                  <% unless user.location.blank? %>
                    <span class="user-location">| <%= shorten(user.location, 20) %></span>
                  <% end %>
                </p>
              </div>
            </div>
        <% end %>
          </li>
      </ul>
      </div>
