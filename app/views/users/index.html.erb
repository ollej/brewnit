      <div class="page-content-header pure-g">
        <div class="pure-u">
          <h1 class="user-content-title"><%= title I18n.t(:'users.index') %></h1>
        </div>
      </div>

      <div class="page-content-body user-index">
        <ul class="user-list linked-list pure-g">
        <% @users.each do |user| %>
          <li class="pure-u-1 pure-u-xl-1-3">
            <div class="user-item linked-item pure-g">
              <div class="pure-u">
                <%= image_tag user.avatar_image, class: 'user-avatar', alt: user.name, height: 64, width: 64 %>
              </div>

              <div class="pure-u-5-8 user-item-information">
                <h5 class="user-brewery"><%= user.brewery %></h5>
                <h4 class="user-name"><%= link_to user.name, user, class: 'user-link item-link' %></h4>
                <p class="user-item-details">
                  <span class="user-recipes"><%= I18n.t(:'users.recipes', count: user.recipes.size) %></span>
                  <% unless user.location.blank? %>
                    <span class="user-location">| <%= user.location %></span>
                  <% end %>
                </p>
              </div>
            </div>
        <% end %>
          </li>
      </ul>
      </div>
