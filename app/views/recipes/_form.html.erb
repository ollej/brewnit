<%= form_for(@recipe, html: { class: 'pure-form pure-form-aligned' }) do |f| %>
  <%= invisible_captcha %>
  <%= hidden_field_tag :clear_search, true %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t(:'activerecord.errors.models.recipe.header', count: @recipe.errors.count) %></h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @event&.official? %>
    <%= render 'shared/event_plate' %>
  <% end %>

  <fieldset>
    <div class="field pure-control-group">
      <%= f.label :beerxml %>
      <%= f.file_field :beerxml, accept: 'application/xml,.xml', required: @recipe.new_record? %>
    </div>
    <div class="field pure-control-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: I18n.t(:'activerecord.attributes.recipe.name') %>
      <em>(<%= I18n.t(:'recipes.name_not_needed') %>)</em>
    </div>
    <div class="field pure-control-group">
      <%= f.label :description, class: 'large-group' %>
      <div class="quill-wrapper">
        <%= f.text_area :description, placeholder: I18n.t(:'activerecord.attributes.recipe.description'), class: 'quill_container' %>
      </div>
    </div>
    <% unless @recipe.persisted? %>
      <% if @event&.official? %>
        <%= hidden_field_tag :event, @event.id %>
      <% else %>
        <div class="field pure-control-group">
            <%= label_tag :event, t(:'common.exhibited_at_event') %>
            <%= select_tag :event, grouped_options_for_select(Event.event_options, @event&.id),
                  class: 'pure-input-1-4',
                  include_blank: t(:'common.no_event') %>
        </div>
      <% end %>
    <% end %>
    <div class="actions pure-controls">
      <%= f.label :public, class: 'pure-checkbox' do %>
        <%= f.check_box :public %> <%= I18n.t(:'activerecord.attributes.recipe.public') %>
      <% end %>
      <br>

      <%= f.submit I18n.t(:'recipes.save'), class: 'pure-button pure-button-primary' %>
    </div>
  </fieldset>
<% end %>
