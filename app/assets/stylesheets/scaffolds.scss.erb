html, body, button, input, select, textarea, p, ol, ul, td,
.pure-g [class *= "pure-u"] {
  font-family: Montserrat,FreeSans,Arimo,"Droid Sans",verdana,arial,helvetica,sans-serif;
}

body {
  color: #777;
  font-size: 13px;
  font-weight: 300;
  line-height: 18px;
}

p, ol, ul, td {
  font-size: 13px;
  line-height: 18px;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

div {
  &.field, &.actions {
    margin-bottom: 10px;
  }
}

.notice {
  color: green;
}

div.field_with_errors {
  display: inline-block;
}
.field_with_errors input {
  background: red;
  color: #fff;
  &::-webkit-input-placeholder {
     color: #fff;
  }
  &:-moz-placeholder { /* Firefox 18- */
     color: #fff;
  }
  &::-moz-placeholder {  /* Firefox 19+ */
     color: #fff;
  }
  &:-ms-input-placeholder {
     color: #fff;
  }
}

#error_explanation {
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;

  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    margin-bottom: 0px;
    background-color: #c00;
    color: #fff;
  }

  ul li {
    font-size: 12px;
    list-style: square;
  }
}

div.google-signin {
  background: url(<%= asset_path 'buttons/btn_google_signin_light_normal_web.png' %>) 0 0 no-repeat;
  background-size: 191px 46px;
  cursor: pointer;
  height: 46px;
  width: 191px;

  &:hover {
    background-image: url(<%= asset_path 'buttons/btn_google_signin_light_focus_web.png' %>);
  }

  &:active {
    background-image: url(<%= asset_path 'buttons/btn_google_signin_light_pressed_web.png' %>);
  }
}
@media
screen and (-webkit-min-device-pixel-ratio: 1.5),
screen and (-moz-min-device-pixel-ratio: 1.5),
screen and (min-device-pixel-ratio: 1.5) {
  div.google-signin {
    background-image: url(<%= asset_path 'buttons/btn_google_signin_light_normal_web@2x.png' %>);

    &:hover {
      background-image: url(<%= asset_path 'buttons/btn_google_signin_light_focus_web@2x.png' %>);
    }

    &:active {
      background-image: url(<%= asset_path 'buttons/btn_google_signin_light_pressed_web@2x.png' %>);
    }
  }
}

#main {
  width: 100%;
}

.pure-menu-item {
  padding: .5em 1em;
}
.pure-menu-link {
  display: inline-block;
  padding: 0;
}
.inline-heading {
  display: inline-block;
  margin-top: 0;

  &::after {
    content: ":";
  }
}

.search-form {
  .range-div {
    margin-top: 1em;
    margin-bottom: 4.5em;
  }

  .range-slider {
    margin-left: 4em;
    margin-right: 2em;
  }

  .noUi-horizontal .noUi-handle-upper .noUi-tooltip {
    top: -32px;
    bottom: 28px;
  }
}

.expand-div {
  display: none;
}
.expand-div:target {
  display: block;
}

.page-content {
  padding: 1em 2em;
}

.pushover-button {
  box-sizing: border-box; background-color: #eee;
  background: url(data:image/png;base64,) 2px 2px no-repeat, linear-gradient(#FFF, #DEDEDE);
  border: 1px solid #CCC; border-radius: 3px; color: #333; display: inline-block;
  font: 11px/18px "Helvetica Neue",Arial,sans-serif; font-weight: bold;
  cursor: pointer; height: 22px; padding-left: 20px; padding-right: 5px;
  overflow: hidden; text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.5);
  text-decoration: none; vertical-align: middle;
  margin-top: 1em;
}

#logo {
  margin-top: 1em;
  padding: 1em 1em 0 1em;
}
.nav-inner {
  margin-top: 0;
  padding-top: 0;
}
.user-edit .recipe-avatar {
  width: 30px;
  height: 30px;
  vertical-align: middle;
}

#slider {
  overflow: auto;
  height: auto;
  margin-top: 1em;
}

#mediaUploadForm {
  #uploadMediaField {
    display: none;
  }
}
#progress {
  .bar {
    height: 18px;
    background: green;
  }
}
