@-ms-viewport{
  width: device-width;
}
body {
  color: #4a4a4a;
}
.beer_recipe {
  width: 100%;

  .colorbox {
    width: 1em;
    height: 1em;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border-width: 1px;
    border-color: beige;
    border-style: solid;
    display: inline-block;
    vertical-align: text-top;
  }

  .recipe-section {
    margin: 0 1em 1em 0;
  }
  section {
    max-width: 100%;
  }
  table {
    border-collapse: separate;
    border: 1px solid #e0e0e0;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    border-spacing: 0;
    width: 100%;
    max-width: 100%;
  }
  thead:first-child tr:first-child th:first-child {
    border-top-left-radius: 3px;
    border-left: 0;
  }
  thead:first-child tr:first-child th:last-child {
    border-top-right-radius: 3px;
  }
  thead tr:first-child th,
  thead tr:first-child td {
    border-top: 0;
  }
  thead th {
    vertical-align: left;
    background-color: #cacaca;
  }
  tbody tr {
    text-align: left;
    background-color: #eaeaea;
  }
  .zebra {
    tbody tr:nth-child(even) {
      background-color: #f5f5f5;
    }
  }
  .zebra-expanded {
    tbody tr:nth-child(4n), tbody tr:nth-child(4n-1) {
      background-color: #f5f5f5;
    }
    tr.details-row:hover + tr {
      display: table-row;
    }
    tr.info-row {
      display: none;
      td {
        white-space: normal;
      }
      &:hover {
        display: table-row;
      }
    }
  }
  td, th {
    border-top: 1px solid #e0e0e0;
    border-left: 1px solid #e0e0e0;
    padding: 6px;
  }
  tbody tr td:first-child {
    border-left: 0;
  }
  tbody tr:last-child td:first-child {
    border-bottom-left-radius: 3px;
    border-radius: 0 0 0 3px;
  }
  tbody tr:last-child td:last-child {
    border-bottom-right-radius: 3px;
    border-radius: 0 0 3px 0;
  }
  .format_number {
    text-align: right;
  }
  .recipe_information {
    border: 1px solid #e0e0e0;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    background-color: #eaeaea;
    padding: 0 8px 0 8px;
  }
  .recipe_information h3 {
    margin-bottom: 0;
  }
  .recipe_information p {
    margin-top: 1pt;
  }
  td {
    white-space: nowrap
  }
  .recipe_details h2:first-child {
    margin-top: 0;
  }
}

@media only screen {
  section {
    overflow-x: scroll;
  }
}
/*
@media only screen and (max-width: 1024px) {
*/
@media only print {
  .beer_recipe {
    display: table;
    .recipe-tables {
      display: table-footer-group;
    }
    .recipe-aside {
      display: table-header-group;
    }
  }
}
/*
@media only screen and (max-width: 1024px) {
*/
@media only screen and (max-width: 768px) {
  .beer_recipe {
    .recipe-section {
      margin: 0 0 1em 0;
    }
    .recipe_information {
      padding-bottom: 1em;
      p, h3 {
        display: inline;
      }
      h3:after {
        content: ":"
      }
      .recipe_notes p,
      .recipe_notes h3 {
        display: block;
      }
    }
  }
}
@media screen and (max-width: 320px) {
  .beer_recipe .recipe_information {
    width: 95%;
  }
}
@media print {
  body {
    background: white;
  }
  #main {
    background: transparent;
  }
  #slider,
  .mTSWrapper,
  .page-content-controls,
  .recipe-badge-list,
  .recipe-content-details,
  .recipe-index,
  #list,
  footer,
  .tabs label,
  #nav,
  nav {
    display: none;
  }
  div.tab-content {
    border-top: none;
  }
  .recipe-header {
    width: 100%;
  }
  .beer_recipe {
    width: 100%;

    .recipe-tables {
      width: 100%;
    }
    h2 {
      page-break-after: avoid;
    }
    .recipe-section {
      -webkit-region-break-inside: avoid;
      page-break-inside: avoid;
      width: 100%;
    }
    tr {
      page-break-after: auto;
    }
    .colorbox {
      display: none;
    }
    .recipe-aside {
      width: 98%;
    }
    .recipe_information {
      margin: 0 0 1.5em 0;
      padding-bottom: 1em;

      h3 {
        font-size: 13px;
        line-height: 18px;
      }
      p, h3 {
        display: inline;
      }
      h3:after {
        content: ":"
      }
      .recipe_notes {
        p, h3 {
          display: block;
        }
      }
    }
  }
}

#pie-chart-malt > svg {
  display: block;
  margin: auto;
}

.gauges {
  text-align: center;

  .gauge-chart {
    padding: 0 1em;
  }
}

#hops-burst > svg {
  display: block;
  margin: auto;
}

.recipe-index {
  min-height: 500px;
  position: relative;

  &::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: contain;
    background-image: url(<%= asset_path 'beer-and-pretzels.png' %>);
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.2;
    z-index: -1;
  }
}
