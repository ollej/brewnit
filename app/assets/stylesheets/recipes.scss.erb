@-ms-viewport{
  width: device-width;
}
body {
  color: #4a4a4a;
}

@media only screen {
  section {
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
  }
}

.recipe-content {
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

@media only print {
  .beer_recipe {
    display: table;
    .recipe-tables {
      display: table-footer-group;
    }
    .recipe-aside {
      display: table-header-group;
    }
  }
}

@media only screen and (max-width: 768px) {
  .beer_recipe {
    .recipe-section {
      margin: 0 0 1em 0;
    }
    .recipe_information {
      padding-bottom: 1em;
      p, h3 {
        display: inline;
      }
      h3:after {
        content: ":"
      }
      .recipe_notes p,
      .recipe_notes h3 {
        display: block;
      }
    }
  }
}

@media screen and (max-width: 320px) {
  .beer_recipe .recipe_information {
    width: 95%;
  }
}

@media print {
  body {
    background: white;
  }
  #main {
    background: transparent;
  }
  #slider,
  .mTSWrapper,
  .page-content-controls,
  .recipe-badge-list,
  .recipe-content-details,
  .recipe-index,
  #list,
  footer,
  .tabs label,
  #nav,
  nav {
    display: none;
  }
  div.tab-content {
    border-top: none;
  }
  .recipe-header {
    width: 100%;
  }
  .beer_recipe {
    width: 100%;

    .recipe-tables {
      width: 100%;
    }
    h2 {
      page-break-after: avoid;
    }
    .recipe-section {
      -webkit-region-break-inside: avoid;
      page-break-inside: avoid;
      width: 100%;
    }
    tr {
      page-break-after: auto;
    }
    .colorbox {
      display: none;
    }
    .recipe-aside {
      width: 98%;
    }
    .recipe_information {
      margin: 0 0 1.5em 0;
      padding-bottom: 1em;

      h3 {
        font-size: 13px;
        line-height: 18px;
      }
      p, h3 {
        display: inline;
      }
      h3:after {
        content: ":"
      }
      .recipe_notes {
        p, h3 {
          display: block;
        }
      }
    }
  }
}

.recipe-index {
  min-height: 500px;
  position: relative;

  &::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: contain;
    background-image: url(<%= asset_path 'beer-and-pretzels.png' %>);
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.2;
    z-index: -1;
  }
}

.colorbox {
  width: 1em;
  height: 1em;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  border-width: 1px;
  border-color: beige;
  border-style: solid;
  display: inline-block;
  vertical-align: text-top;
}
